<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="@string/btn_display_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tv_switch_label" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_display_list" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.177" app:layout_constraintVertical_bias="0.589"
            app:layout_constraintTop_toBottomOf="@+id/tv_switch_label" android:layout_marginStart="8dp"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sw_hide_invis"
            app:layout_constraintBottom_toBottomOf="@+id/tv_switch_label" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/tv_switch_label"
            app:layout_constraintHorizontal_bias="0.286"/>
    <TextView
            android:text="@string/home_switch_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_switch_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="88dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="216dp"/>
</android.support.constraint.ConstraintLayout>